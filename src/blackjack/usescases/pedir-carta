/**
 * 
 * @param { Array<string> } deck Recibimos el deck creado y shufleado
 * @returns Devolvemos una carta
 */

export const pedirCarta = (deck) => {

    if (!deck || deck.length === 0 ) {
        throw new Error ('No hay cartas en el deck');
    }
    const carta = deck.pop();
    return carta;
}